package br.com.rd.politeismo.ecommerce.entities;

import java.time.LocalDate;
import java.util.List;

import javax.persistence.CascadeType;
import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.FetchType;
import javax.persistence.ManyToMany;
import javax.persistence.OneToMany;



@Entity
public class Juridica extends ClienteJ{
	
	
	

	public Juridica(Long idJ, String nomeJ, String emailJ, String senhaJ, String cnpj, LocalDate abertura,
			String inscricaoEstadual, String razaoSocial, List<Endereco> enderecos) {
		super(idJ, nomeJ, emailJ, senhaJ);
		this.cnpj = cnpj;
		this.abertura = abertura;
		this.inscricaoEstadual = inscricaoEstadual;
		this.razaoSocial = razaoSocial;
		this.enderecos = enderecos;
	}



	@Column(nullable=false)
	private String cnpj;
	
	@Column(nullable=false)
	private LocalDate abertura;
	
	@Column(name="inscricao_estadual", nullable=false)
	private String inscricaoEstadual;
	
	@Column(name="razao_social", nullable=false)
	private String razaoSocial;
	
	@ManyToMany(mappedBy="clientesJuridica",fetch = FetchType.EAGER)
	private List<Endereco> enderecos;
	
	 



	
	
}// end class