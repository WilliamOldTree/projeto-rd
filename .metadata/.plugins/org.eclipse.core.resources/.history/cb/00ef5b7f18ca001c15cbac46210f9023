package com.springrobinson.crudjpahibernatemysql.service;

import com.springrobinson.crudjpahibernatemysql.model.Cliente;

import java.util.List;

public interface IClienteService {
    //método para traer a todos los clientes
    public List<Cliente> getClientes ();

    //Método para dar de alta a cliente
    public void saveCliente(Cliente cliente);

    //método para borrar a un cliente
    public void deleteCliente(Long id);

    //método para encontrar a un cliente
    public Cliente findCliente(Long id);
}
