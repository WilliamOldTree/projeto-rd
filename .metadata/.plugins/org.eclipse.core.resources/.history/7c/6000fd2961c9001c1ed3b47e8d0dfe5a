package br.com.qsd.politeismo.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import br.com.qsd.politeismo.ecommerce.entities.Cartao;
import br.com.qsd.politeismo.repository.CartaoRepository;

@Service
public class CartaoService {
	
@Autowired
private CartaoRepository repo;

public Cartao salvarCartao (Cartao cartao) {
	return  repo.save(cartao);
}

public List<Cartao> salvarCartoes (List<Cartao> cartao) {
	return  repo.saveAll(cartao);
}


public List<Cartao> listaCartoes () {
	return  repo.findAll();
}


public Cartao listaCartoesId (Long id) {
	return  repo.findById(id).orElse(null);
}

public Cartao listaCartoesTitular (String titular) {
	return  repo.findByName(titular);
}

public String deletarCartao (Long id) {
	repo.deleteById(id);
	return "Cart√£o foi Deletado!" +id;
}

public Cartao atualizarCartao (Cartao cartao) {
	Cartao existeCartao = repo.findById(cartao.getId()).orElse(null);
	existeCartao.setTitular_cartao(cartao.getTitular_cartao());
	existeCartao.setCvv_cartao(cartao.getCvv_cartao());
	existeCartao.setValidade_cartao(cartao.getValidade_cartao());
	return repo.save(existeCartao);
}

}
